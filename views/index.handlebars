<h1>Whadd-a-Burger!</h1>

<div class="container">
  <div class="burger-box">
    <h2>BURGERS I WANT TO EAT</h2>
    <img src="">

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{ burger_name }}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="burger-box">
    <h2>BURGERS I HAVE EATEN</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{ burger_name }}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="input-form">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-text">Burger Name:</label>
      <input type="text" id="burger-text" name="name">
    </div>


    <button type="submit" id="add-burger">Add Burger</button>
  </form>
</div>